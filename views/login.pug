extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='text', placeholder='Email' name='email' required='true' value=(undefined===user ? 'admin@example.com' : user.email) )
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', placeholder='Password' name='password' value=(undefined===user ? 'admin123' : user.password) required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg